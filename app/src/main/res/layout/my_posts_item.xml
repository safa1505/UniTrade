
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_posts_Item"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="8dp"
    tools:ignore="HardCodedText">

    <RelativeLayout
        android:id="@+id/relativeLayout_myproduct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
       android:layout_gravity="center_vertical"
        android:gravity="center"
        android:background="@color/white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/myProduct_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_menu_camera"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
             android:id="@+id/my_product_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Product Name"
             android:layout_marginStart="8dp"
             android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/myProduct_imageView"
             android:textSize="18sp"
             android:textColor="#180937"
             android:textStyle="bold"/>

    <TextView
        android:id="@+id/my_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Price"
        android:layout_toEndOf="@+id/myProduct_imageView"
        android:layout_below="@+id/my_product_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="#180937"
        android:textStyle="normal"/>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/My_product_update"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Update"
            android:layout_marginStart="50dp"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="#180937"/>

        <Button
            android:id="@+id/My_product_delete"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Delete"
            android:focusable="true"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/My_product_update"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/white"
            android:background="#180937"/>

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>