<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wishlist_rec_item"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="8dp"
    tools:ignore="HardCodedText">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center_horizontal"
        android:background="@drawable/button">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/wishlistrec_imageView"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_menu_camera"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/wishlistrec_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="Product Name"
            android:layout_below="@id/wishlistrec_imageView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wishlistrec_Price"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_below="@id/wishlistrec_Name"
            android:text="Price:Tk"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>